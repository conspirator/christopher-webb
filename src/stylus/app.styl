@import '_normalize'

@keyframes tada
  0%
    transform: scale(1)
  10%, 20%
    transform: scale(0.9) rotate(-3deg)
  30%, 50%, 70%, 90%
    transform: scale(1.1) rotate(3deg)
  40%, 60%, 80%
    transform: scale(1.1) rotate(-3deg)
  100%
    transform: scale(1) rotate(0)

body
  font: 100 normal 13px/1.8 "Open Sans", sans-serif

a
  color: #00aeff
  text-decoration: none
  line-height: inherit
  font-weight: inherit
  transition: color 0.2s linear
  &:hover
    color: #4dc6ff

p
  margin: 0 0 13px

#wrap
  background: black
  background: rgba(black, 0.7)
  color: white
  margin-left: 20px
  max-width: 340px
  padding: 20px
  border-radius: 0 0 3px 3px
h1
  font-family: "Helvetica Neue", Arial, sans-serif
  font-size: 27px
  font-weight: 600
  line-height: 1
  margin: 0 0 10px
  text-transform: uppercase;
  animation-duration: 1s
  animation-delay: 0.2s
  animation-timing-function: ease
  animation-fill-mode: both
  a
    text-decoration: none
  &:hover
    color: #00aeff
    animation-name: tada
    a
      color: #00aeff

.twitter-follow-button
  margin-top: 10px

footer
  background: black
  background: rgba(black, 0.7)
  bottom: 0
  font-size: 10px
  padding: 5px 10px
  position: fixed
  right: 20px
  border-radius: 3px 3px 0 0
  a
    color: white
    text-decoration: none


// Mobile - Landscape
@media screen and (max-width: 480px)
  #wrap
    margin: 0 auto

  footer
    position: static
    background: transparent
    padding: 0
    margin-top: 10px

// Mobile - Landscape
@media screen and (max-width: 321px)
  h1
    font-size: 22px